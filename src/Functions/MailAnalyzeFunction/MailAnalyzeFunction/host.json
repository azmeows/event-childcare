{
    "version": "2.0",
    "logging": {
        "applicationInsights": {
            "samplingSettings": {
                "isEnabled": true,
                "excludedTypes": "Request"
            },
            "enableLiveMetricsFilters": true
        },
        "logLevel": {
            "Host.Triggers.CosmosDB": "Information"
        }
    },
    "extensions": {
        "cosmosDB": {
            "connectionMode": "Direct",
            "protocol": "Tcp",
            "leaseOptions": {
                "leasePrefix": "mailanalyze"
            }
        },
        "http": {
            "routePrefix": "api",
            "cors": {
                "allowedOrigins": [
                    "*"
                ],
                "allowedMethods": [
                    "GET",
                    "POST"
                ],
                "allowedHeaders": [
                    "Content-Type",
                    "Authorization"
                ],
                "maxAge": 3600
            }
        }
    },
    "functionTimeout": "00:05:00"
}